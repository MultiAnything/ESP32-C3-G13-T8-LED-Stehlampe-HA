# ESPHome Secrets Datei
# WICHTIG: Kopiere diese Datei zu secrets.yaml und f端lle die Werte aus
# secrets.yaml wird NICHT in Git committed (siehe .gitignore)

# WiFi Konfiguration
wifi_ssid: "DEIN_WIFI_SSID"
wifi_password: "DEIN_WIFI_PASSWORT"

# OTA Update Passwort (32 Zeichen, URL-safe empfohlen)
# ESPHome verwendet MD5-basierte Challenge-Response (nicht AES256)
# Das Passwort wird als Plaintext gespeichert und bei OTA-Authentifizierung verwendet
ota_password: "DEIN_OTA_PASSWORT_HIER_MIN_16_ZEICHEN"

# Access Point Passwort (Fallback WLAN)
# ESPHome verwendet WPA2/WPA3 (nicht AES256)
# Das Passwort wird als Plaintext gespeichert und f端r WiFi-AP verwendet
ap_password: "DEIN_AP_PASSWORT_HIER_MIN_16_ZEICHEN"

# API Verschl端sselungsschl端ssel (Base64-kodiert, 32 Bytes = 256 Bit)
# Format: Base64 (nicht Hex!)
# Verwendet Noise Protocol Framework (nicht direkt AES256, aber AES-256-GCM als Cipher)
# Generiere mit: python3 -c "import secrets; import base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
# Oder: openssl rand -base64 32
api_encryption_key: "DEIN_64_ZEICHEN_BASE64_KEY_HIER"

