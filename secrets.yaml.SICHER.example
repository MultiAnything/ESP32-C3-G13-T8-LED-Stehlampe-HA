# ESPHome Secrets Datei - SICHERE VERSION
# Kopiere diese Datei zu secrets.yaml und fülle die Werte aus
# WICHTIG: secrets.yaml NIE in Git committen!

# ============================================
# KRITISCH: Diese Werte MÜSSEN gesetzt werden
# ============================================

# WiFi Konfiguration
wifi_ssid: "DEIN_WIFI_SSID"
wifi_password: "DEIN_STARKES_WIFI_PASSWORT_MIN_20_ZEICHEN"

# API Verschlüsselungsschlüssel
# Generiere mit: esphome secrets generate-key
# Oder: python3 -c "import secrets; print(secrets.token_hex(32))"
# Länge: 64 Zeichen (32 Bytes in Hex)
api_encryption_key: "DEIN_64_ZEICHEN_API_ENCRYPTION_KEY_HIER"

# OTA Update Passwort
# Mindestens 16 Zeichen, Groß-/Kleinbuchstaben, Zahlen, Sonderzeichen
ota_password: "DeinStarkesOTAPasswort123!@#"

# Access Point Passwort (Fallback)
# Mindestens 16 Zeichen, Groß-/Kleinbuchstaben, Zahlen, Sonderzeichen
ap_password: "StarkesAPPasswort123!@#"

# ============================================
# OPTIONAL: Web Server Authentifizierung
# ============================================

# Web Server Benutzername (falls web_server aktiviert)
# web_server_username: "admin"

# Web Server Passwort (falls web_server aktiviert)
# Mindestens 16 Zeichen, Groß-/Kleinbuchstaben, Zahlen, Sonderzeichen
# web_server_password: "StarkesWebPasswort123!@#"

# ============================================
# SICHERHEITSHINWEISE
# ============================================
# 
# 1. Verwende UNIQUE Passwörter für jedes Gerät
# 2. Verwende starke Passwörter (min. 16 Zeichen)
# 3. Rotiere Passwörter regelmäßig (alle 3-6 Monate)
# 4. Speichere secrets.yaml NUR lokal, NIE in Git
# 5. Backups von secrets.yaml verschlüsselt speichern
# 6. Bei Kompromittierung: Alle Passwörter sofort ändern
#
# Passwort-Generator:
# - https://www.lastpass.com/de/features/password-generator
# - KeePass, 1Password, Bitwarden
#
# ============================================

